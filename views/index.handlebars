<body style="background: url(glitterglitter.jpg)">

<nav class="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Pet Adopter</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#"><span class="glyphicon glyphicon-heart-empty"></span> &nbsp;Adopt a Pet</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-envelope"></span> &nbsp;Contact Us</a></li>
    </ul>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid" style="background: transparent;">
  <div class="container">
    <h1 class="display-4" style="font-size: 150%;">FANTASY PETS</h1>
    <h3 class="lead" style="font-size: 50%;">Fantastic Pets and Where To Find Them!</h3>
  </div>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
    
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img class="carousel-item-img img-fluid center-block" src="backgroundimgsmall.png" alt="Image">
            </div>
      
            <div class="item">
              <img class="carousel-item-img img-fluid center-block" src="pokemonpicsmall.jpg" alt="Image">
            </div>
      
            <div class="item">
              <img class="carousel-item-img img-fluid center-block" src="lotranimalpicsmall.jpg" alt="Image">
            </div>

            <div class="item">
                    <img class="carousel-item-img img-fluid center-block" src="harrypotterpicsmall.jpg" alt="Image">
                  </div>
      
          </div>
    
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>


  
<div class="container text-center">    
  <h1>Adopt a Pet Today!</h1><br>
  <div class="row">
    <div class="col-sm-4" id="adoptdiv">
      <h1>Adopt</h1>
      <img src="dragonfriend.jpg" class="img-responsive" style="width:200px" alt="Image">
    </div>
    <div class="col-sm-4" id="backtorealanimalsdiv"> 
      <h1>Back to Real Pets</h1>
      <img src="realpupper.jpg" class="img-responsive" style="width:200px" alt="Image">
    </div>
    <div class="col-sm-4" id="contactdiv">
      <h1>Contact</h1>
      <img src="sendusaletter.jpg" class="img-responsive" style="width:200px" alt="Image">
    </div>
  </div>
</div><br>

<footer class="container-fluid text-center">
  <p>Footer Text</p>
</footer>

</body>


